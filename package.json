{
    "name": "hyperbolic-plane-tile-poc",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "preview": "vite preview",
        "typecheck": "tsc -p tsconfig.json",
        "lint": "biome check . && pnpm typecheck",
        "format": "biome check --write src tests ops docs ./*.md ./*.json",
        "test": "vitest --run --pool=threads --poolOptions.threads.singleThread --no-file-parallelism",
        "test:watch": "vitest",
        "coverage": "vitest run --coverage",
        "storybook": "storybook dev -p 6006",
        "storybook:test": "test-storybook",
        "build-storybook": "storybook build",
        "prepare": "husky",
        "ci": "pnpm biome:ci && pnpm typecheck && pnpm test",
        "biome:ci": "biome ci .",
        "biome:ci:code": "biome ci src tests ops docs ./*.md ./*.json"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.2.2",
        "@fast-check/vitest": "^0.2.2",
        "@storybook/addon-essentials": "8.1.8",
        "@storybook/addon-interactions": "8.1.8",
        "@storybook/react": "8.1.8",
        "@storybook/react-vite": "8.1.8",
        "@storybook/test": "8.1.8",
        "@storybook/test-runner": "0.16.0",
        "@storybook/testing-library": "0.2.2",
        "@types/node": "^24.5.2",
        "@types/react": "^18.3.5",
        "@types/react-dom": "^18.3.0",
        "@vitejs/plugin-react": "^4.3.1",
        "@vitest/coverage-v8": "^2.0.5",
        "fast-check": "^4.3.0",
        "husky": "^9.1.7",
        "jsdom": "^27.0.0",
        "lint-staged": "^16.1.6",
        "playwright": "^1.56.0",
        "storybook": "8.1.8",
        "typescript": "^5.6.2",
        "vite": "^5.4.6",
        "vitest": "^2.0.5"
    },
    "dependencies": {
        "react": "^18.3.1",
        "react-dom": "^18.3.1"
    }
}
